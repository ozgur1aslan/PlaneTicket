@model IEnumerable<Flight>


@{
    
}


@if (Model != null && Model is IEnumerable<Flight>)
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Search Result</h2>
            </div>
            
        </div>
        <br /><br />

        <p> Here are your search results. If there aren't any flights with the date you provided, closest flights dates up or down to 7 days are shown.</p>

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Flight No
                    </th>
                    <th>
                        Departure Point
                    </th>
                    <th>
                        Destination
                    </th>
                    <th>
                        Flight Date
                    </th>
                    <th>
                        Flight Time
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.FlightNo
                        </td>
                        <td width="50%">
                            @obj.LocationFrom
                        </td>
                        <td width="50%">
                            @obj.LocationTo
                        </td>
                        <td width="50%">
                            @obj.DepartureDate
                        </td>
                        <td width="50%">
                            @obj.DepartureTime
                        </td>
                        <td width="30%">
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="User" asp-action="CheckSeats" asp-route-id="@obj.Id"
                                   class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Check Seats</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
}




else
{
<div class="container p-3">
    <p>Please return to previous page and make another search.</p>
</div>
}