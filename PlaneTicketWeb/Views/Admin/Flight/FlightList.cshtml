@model IEnumerable<Flight>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Flight List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="CreateFlight" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Flight
            </a>

            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
    <br /><br />



    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Flight No
                </th>
                <th>
                    Departure Point
                </th>
                <th>
                    Destination
                </th>
                <th>
                    Flight Date
                </th>
                <th>
                    Flight Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.FlightNo
                    </td>
                    <td width="50%">
                        @obj.LocationFrom
                    </td>
                    <td width="50%">
                        @obj.LocationTo
                    </td>
                    <td width="50%">
                        @obj.DepartureDate
                    </td>
                    <td width="50%">
                        @obj.DepartureTime
                    </td>
                    <td width="30%">
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="CheckSeats" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Check Seats</a>
                            <a asp-controller="Admin" asp-action="EditFlight" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Admin" asp-action="DeleteFlight" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>